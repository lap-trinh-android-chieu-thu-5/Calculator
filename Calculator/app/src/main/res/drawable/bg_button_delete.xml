<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners
                android:radius="8dip" />
            <stroke
                android:width="1dip"
                android:color="#ce0a0a" />
            <gradient
                android:angle="-90"
                android:startColor="#ce4242"
                android:endColor="#ce0a0a"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners
                android:radius="8dip" />
            <stroke
                android:width="1dip"
                android:color="#ce4242" />
            <solid
                android:color="#ce0a0a"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners
                android:radius="8dip" />
            <stroke
                android:width="1dip"
                android:color="#ce0a0a" />
            <gradient
                android:angle="-90"
                android:startColor="#ce4242"
                android:endColor="#d32121" />
        </shape>
    </item>
</selector>