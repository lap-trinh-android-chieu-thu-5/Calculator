<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners
                android:radius="8dip" />
            <stroke
                android:width="1dip"
                android:color="#18A959" />
            <gradient
                android:angle="-90"
                android:startColor="#18A959"
                android:endColor="#689a92"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners
                android:radius="8dip" />
            <stroke
                android:width="1dip"
                android:color="#18A959" />
            <solid
                android:color="#18A959"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners
                android:radius="8dip" />
            <stroke
                android:width="1dip"
                android:color="#18A959" />
            <gradient
                android:angle="-90"
                android:startColor="#8dbab3"
                android:endColor="#18A959" />
        </shape>
    </item>
</selector>